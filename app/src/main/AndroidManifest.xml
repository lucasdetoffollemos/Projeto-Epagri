<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.projetoEpagri">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Activity Principal -->
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Activity Perfil -->
        <activity
            android:name=".Activities.PerfilActivity"
            android:label=" Criar Perfil"
            android:parentActivityName=".Activities.MainActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.projetoEpagri.Activities.MainActivity" />
        </activity> <!-- Activity De lista de usuarios -->
        <activity
            android:name=".Activities.ListaUsuariosActivity"
            android:label="Lista de Usuarios"
            android:parentActivityName=".Activities.PerfilActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.projetoEpagri.Activities.PerfilActivity" />
        </activity> <!-- Activity index -->
        <activity
            android:name=".Activities.IndexActivity"
            android:label="Bem vindo"
            android:parentActivityName=".Activities.MainActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.projetoEpagri.Activities.MainActivity" />
        </activity> <!-- Acitivity Propriedade -->
        <activity
            android:name=".Activities.PropriedadeActivity"
            android:label="Propriedade"
            android:parentActivityName=".Activities.IndexActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.projetoEpagri.Activities.IndexActivity" />
        </activity>
        <!-- Activity piquete        -->
        <activity android:name=".Activities.PiqueteActivity"
            android:screenOrientation="landscape"
            android:label="Piquete"
            android:parentActivityName=".Activities.PropriedadeActivity"
           >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.projetoEpagri.Activities.PropriedadeActivity"
                />
        </activity>
    </application>

</manifest>