<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.projetoEpagri">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icone_3"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icone_3"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup">
        <activity android:name=".Activities.ModificaSenhaActivity"></activity>
        <activity android:name=".Activities.RecuperaSenhaActivity" />
        <activity android:name=".Activities.EditarDadosActivity" />
        <activity
            android:name=".Activities.GraficoActivity"
            android:largeHeap="true"
            android:screenOrientation="landscape"
            tools:ignore="LockedOrientationActivity" /> <!-- Splash Screen -->
        <activity android:name=".Activities.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Activity Principal -->
        <activity android:name=".Activities.MainActivity" /> <!-- Activity Perfil -->
        <activity
            android:name=".Activities.PerfilActivity"
            android:label=" Criar Perfil"
            android:parentActivityName=".Activities.MainActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.projetoEpagri.Activities.SplashScreenActivity" />
        </activity> <!-- Activity De lista de usuarios -->
        <!-- Activity index -->
        <activity
            android:name=".Activities.IndexActivity"
            android:label="Bem vindo"
            android:parentActivityName=".Activities.MainActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.projetoEpagri.Activities.MainActivity" />
        </activity> <!-- Acitivity Tabs -->
        <activity
            android:name=".Activities.TabsActivity"
            android:screenOrientation="landscape"
            tools:ignore="LockedOrientationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.projetoEpagri.Activities.IndexActivity" />
        </activity> <!-- Acitivity Propriedade -->
        <activity
            android:name=".Activities.PropriedadeActivity"
            android:label="Propriedade"
            android:parentActivityName=".Activities.IndexActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.projetoEpagri.Activities.IndexActivity" />
        </activity> <!-- Activity piquete -->
        <activity
            android:name=".Activities.PiqueteActivity"
            android:label="Piquete"
            android:parentActivityName=".Activities.PropriedadeActivity"
            android:screenOrientation="landscape"
            tools:ignore="LockedOrientationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.projetoEpagri.Activities.PropriedadeActivity" />
        </activity> <!-- Activity Animais -->
        <activity
            android:name=".Activities.AnimaisActivity"
            android:label="Animais"
            android:parentActivityName=".Activities.PiqueteActivity"
            android:screenOrientation="landscape"
            tools:ignore="LockedOrientationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.projetoEpagri.Activities.PiqueteActivity" />
        </activity>
        <activity android:name=".Activities.DadosPerfilActivity" />
        <activity android:name=".Activities.SobreActivity" />
        <activity android:name=".Activities.ConfiguracoesActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>