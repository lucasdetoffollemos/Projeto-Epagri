<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00B050">

    <TextView
        android:id="@+id/tv_piquetePastagem"
        android:layout_width="200sp"
        android:layout_height="80sp"
        android:layout_weight="1"
        android:background="#00B050"
        android:gravity="center"
        android:text="@string/txt_tv_piquete"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_condicao"
        android:layout_width="140sp"
        android:layout_height="80sp"
        android:layout_weight="1"
        android:background="#00B050"
        android:gravity="center"
        android:text="@string/txt_tv_condicaoPastagem"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_area"
        android:layout_width="170sp"
        android:layout_height="80sp"
        android:layout_weight="1"
        android:background="#00B050"
        android:gravity="center"
        android:text="@string/txt_tv_areaHa"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_prodEstimadaAno"
        android:layout_width="170sp"
        android:layout_height="80sp"
        android:layout_weight="1"
        android:background="#00B050"
        android:gravity="center"
        android:text="@string/txt_tv_producaoEstimadaAno"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginRight="7dp"
        />

        <include layout="@layout/tabela_oferta_atual_2"></include>

</LinearLayout>