<?xml version="1.0" encoding="utf-8"?>
    <merge
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
    >

    <HorizontalScrollView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout

                android:id="@+id/piqueteLayout0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout

                android:id="@+id/layoutRegiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_regiao"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="Região:"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="150dp"/>


                <Spinner
                    android:id="@+id/spinnerRegiao"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:spinnerMode="dropdown"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/piqueteLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">




                <include layout="@layout/tabela_oferta_atual_1"></include>

                <TableLayout
                    android:id="@+id/table_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/bt_adicionar_linha"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:text="+" />

                <Button
                android:id="@+id/bt_remover_linha"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:text="-" />




            </LinearLayout>

            <View
                android:layout_width="600dp"
                android:layout_height="1dp"
                android:background="@android:color/background_dark"
                android:layout_marginLeft="690dp"
                android:layout_marginBottom="5dp"/>

            <include layout="@layout/linha_resultados_tabela_oferta"></include>

            <View
                android:layout_width="600dp"
                android:layout_height="1dp"
                android:background="@android:color/background_dark"
                android:layout_marginLeft="690dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />

            <include layout="@layout/linha_resultados_tabela_oferta2"></include>


                <Button
                    android:id="@+id/bt_proximo_passo"
                    android:layout_width="200sp"
                    android:layout_marginLeft="50sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="15sp"
                    android:layout_height="wrap_content"
                    android:text="Próximo passo" />
            </LinearLayout>

        </ScrollView>
    </HorizontalScrollView>

</merge>


