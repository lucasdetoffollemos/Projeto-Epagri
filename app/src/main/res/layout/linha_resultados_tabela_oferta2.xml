<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >


    <TextView
        android:id="@+id/tv_AreaTotalEsta"
        android:layout_width="675sp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:text="Total/Estação:"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="14sp"
        />


    <TextView
        android:id="@+id/tv_AreaTotalVer"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:text="Ver"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/tv_AreaTotalOut"
        android:layout_width="115sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:text="Out"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="14sp"
        />


    <TextView
        android:id="@+id/tv_AreaTotalInve"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:text="Inve"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="14sp"
       />


    <TextView
        android:id="@+id/tv_AreaTotalPrim"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:text="Prim"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="14sp"
        />





</TableRow>