<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza"
    tools:context="com.example.projetoEpagri.Activities.IndexActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/cinza"
        android:orientation="horizontal"
        android:padding="12dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/todo"
            android:onClick="clicarMenu"
            android:src="@drawable/ic_menu"
            android:tint="@color/preto" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"
            android:text="@string/txt_tv_config"
            android:textColor="@color/preto"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center_horizontal"
            android:text="@string/txt_tv_config_msg"
            android:textColor="@color/preto"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_edit_cfa"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:background="@color/verde"
            android:text="@string/txt_bt_cfa"
            android:textColor="@color/branco"
            app:cornerRadius="8dp" />

        <Button
            android:id="@+id/bt_edit_cfb"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@color/verde"
            android:text="@string/txt_bt_cfb"
            android:textColor="@color/branco"
            app:cornerRadius="8dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/cinza">

        <include layout="@layout/main_nav_drawer" android:id="@+id/included_nav_drawer"/>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>